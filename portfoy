        const USD_TRY = 34.25;

        // ========== STATE ==========
        let portfolio = [];
        let currentCategory = 'all';
        let selectedType = 'bist';
        let selectedAsset = null;
        let editingId = null;
        let priceUpdateInterval = null;

        // ========== INIT ==========
        function init() {
            initTheme();
            loadPortfolio();
            renderPortfolio();
            updateSummary();
            startPriceUpdates();
        }

        function initTheme() {
            if (window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches) {
                document.documentElement.classList.add('light');
                document.getElementById('themeIcon').className = 'fas fa-sun';
            }
            window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
                if (event.matches) {
                    document.documentElement.classList.remove('light');
                    document.getElementById('themeIcon').className = 'fas fa-moon';
                } else {
                    document.documentElement.classList.add('light');
                    document.getElementById('themeIcon').className = 'fas fa-sun';
                }
            });
        }

        function toggleTheme() {
            document.documentElement.classList.toggle('light');
            const icon = document.getElementById('themeIcon');
            icon.className = document.documentElement.classList.contains('light') ? 'fas fa-sun' : 'fas fa-moon';
        }

        // ========== STORAGE (In-Memory) ==========
        // Note: localStorage is not available in iframe, using in-memory storage
        // Data persists only during the session
        function loadPortfolio() {
            // Portfolio is already initialized as empty array
            // In production, you could use an API to persist data
        }

        function savePortfolio() {
            // Data is kept in memory (portfolio array)
            // In production, you could save to an API/backend
        }

        // ========== PRICE UPDATES ==========
        function startPriceUpdates() {
            updatePrices();
            priceUpdateInterval = setInterval(updatePrices, 30000);
        }

        function updatePrices() {
            portfolio.forEach(asset => {
                if (asset.type !== 'deposit' && asset.type !== 'cash') {
                    const assetData = ASSETS_DATA[asset.type]?.find(a => a.symbol === asset.symbol);
                    if (assetData && !assetData.isManual) {
                        const change = (Math.random() - 0.5) * 0.02;
                        assetData.price = assetData.price * (1 + change);
                        asset.currentPrice = assetData.price;
                    }
                }
            });
            renderPortfolio();
            updateSummary();
            updateLastUpdateTime();
        }

        function refreshPrices() {
            const icon = document.getElementById('refreshIcon');
            icon.style.animation = 'spin 1s linear infinite';

            setTimeout(() => {
                updatePrices();
                icon.style.animation = '';
                showAlert('Fiyatlar güncellendi!', 'success');
            }, 800);
        }

        function updateLastUpdateTime() {
            const el = document.getElementById('lastUpdate');
            if (portfolio.length > 0) {
                el.style.display = 'flex';
                const now = new Date();
                el.querySelector('span').textContent = `Son güncelleme: ${now.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' })}`;
            } else {
                el.style.display = 'none';
            }
        }

        // ========== RENDER ==========
        function renderPortfolio() {
            const list = document.getElementById('assetList');
            const empty = document.getElementById('emptyState');

            let filtered = portfolio;
            if (currentCategory !== 'all') {
                filtered = portfolio.filter(a => a.type === currentCategory);
            }

            if (filtered.length === 0) {
                list.innerHTML = '';
                list.appendChild(empty);
                empty.style.display = 'block';
                return;
            }

            empty.style.display = 'none';
            list.innerHTML = filtered.map((asset, index) => {
                const totalValue = calculateAssetValue(asset);
                const totalCost = asset.amount * asset.buyPrice;
                const profit = totalValue - totalCost;
                const profitPercent = totalCost > 0 ? (profit / totalCost) * 100 : 0;
                const isProfitable = profit >= 0;

                return `
                    <div class="asset-card" onclick="editAsset('${asset.id}')" style="animation-delay: ${index * 0.05}s">
                        <div class="asset-icon ${asset.type}">${getAssetIconLetter(asset)}</div>
                        <div class="asset-info">
                            <div class="asset-name">${asset.name}</div>
                            <div class="asset-details">${asset.symbol} • ${formatNumber(asset.amount)} adet</div>
                        </div>
                        <div class="asset-values">
                            <div class="asset-total">${formatCurrency(totalValue)}</div>
                            <div class="asset-change ${isProfitable ? 'profit' : 'loss'}">
                                <i class="fas fa-${isProfitable ? 'arrow-up' : 'arrow-down'}"></i>
                                ${isProfitable ? '+' : ''}${formatCurrency(profit)} (${profitPercent >= 0 ? '+' : ''}${profitPercent.toFixed(2)}%)
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function getAssetIconLetter(asset) {
            if (asset.type === 'gold') return '<i class="fas fa-coins"></i>';
            if (asset.type === 'silver') return '<i class="fas fa-ring"></i>';
            if (asset.type === 'deposit') return '<i class="fas fa-piggy-bank"></i>';
            if (asset.type === 'cash') return asset.symbol;
            return asset.symbol.substring(0, 2);
        }

        function calculateAssetValue(asset) {
            if (asset.type === 'deposit') {
                return asset.currentPrice || (asset.amount * asset.buyPrice);
            }
            if (asset.type === 'cash') {
                if (asset.symbol === 'TRY') return asset.amount;
                return asset.amount * asset.currentPrice;
            }
            if (asset.type === 'us' || asset.type === 'etf') {
                return asset.amount * asset.currentPrice * USD_TRY;
            }
            return asset.amount * asset.currentPrice;
        }

        function updateSummary() {
            let totalValue = 0;
            let totalCost = 0;

            portfolio.forEach(asset => {
                totalValue += calculateAssetValue(asset);
                if (asset.type === 'us' || asset.type === 'etf') {
                    totalCost += asset.amount * asset.buyPrice * USD_TRY;
                } else if (asset.type === 'cash' && asset.symbol !== 'TRY') {
                    totalCost += asset.amount * asset.buyPrice;
                } else {
                    totalCost += asset.amount * asset.buyPrice;
                }
            });

            const profit = totalValue - totalCost;
            const profitPercent = totalCost > 0 ? (profit / totalCost) * 100 : 0;
            const isProfitable = profit >= 0;

            document.getElementById('totalValue').textContent = formatCurrency(totalValue);

            const changeEl = document.getElementById('totalChange');
            changeEl.className = `total-change ${isProfitable ? 'profit' : 'loss'}`;
            changeEl.innerHTML = `
                <i class="fas fa-arrow-${isProfitable ? 'up' : 'down'}"></i>
                <span>${isProfitable ? '+' : ''}${formatCurrency(profit)} (${profitPercent >= 0 ? '+' : ''}${profitPercent.toFixed(2)}%)</span>
            `;
        }

        // ========== CATEGORY FILTER ==========
        function filterCategory(category) {
            currentCategory = category;
            document.querySelectorAll('.category-pill').forEach(pill => {
                pill.classList.toggle('active', pill.dataset.category === category);
            });
            renderPortfolio();
        }

        // ========== MODAL ==========
        function openAddModal() {
            editingId = null;
            selectedAsset = null;
            selectedType = 'bist';

            document.getElementById('modalTitle').textContent = 'Varlık Ekle';
            document.getElementById('submitBtn').innerHTML = '<i class="fas fa-plus"></i> Ekle';
            document.getElementById('deleteBtn').style.display = 'none';

            resetForm();
            updateFormForType();
            document.getElementById('addModal').classList.add('active');
        }

        function closeAddModal() {
            document.getElementById('addModal').classList.remove('active');
            resetForm();
        }

        function resetForm() {
            document.getElementById('searchInput').value = '';
            document.getElementById('amountInput').value = '';
            document.getElementById('buyPriceInput').value = '';
            document.getElementById('currentPriceInput').value = '';
            document.getElementById('interestInput').value = '';
            document.getElementById('searchResults').classList.remove('active');
            document.getElementById('selectedAssetGroup').style.display = 'none';
            document.getElementById('searchGroup').style.display = 'block';
            selectedAsset = null;

            document.querySelectorAll('.type-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.type === 'bist');
            });
            selectedType = 'bist';
        }

        function selectType(type) {
            selectedType = type;
            selectedAsset = null;

            document.querySelectorAll('.type-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.type === type);
            });

            document.getElementById('searchInput').value = '';
            document.getElementById('searchResults').classList.remove('active');
            document.getElementById('selectedAssetGroup').style.display = 'none';
            document.getElementById('searchGroup').style.display = 'block';

            updateFormForType();
        }

        function updateFormForType() {
            const isDeposit = selectedType === 'deposit';
            const isCash = selectedType === 'cash';

            document.getElementById('interestGroup').style.display = isDeposit ? 'block' : 'none';
            document.getElementById('currentPriceGroup').style.display = isDeposit ? 'block' : 'none';

            if (isDeposit) {
                document.getElementById('amountLabel').textContent = 'Anapara (₺)';
                document.getElementById('buyPriceLabel').textContent = 'Yatırım Tarihi Değeri (₺)';
                document.getElementById('buyPriceGroup').style.display = 'none';
            } else if (isCash) {
                document.getElementById('amountLabel').textContent = 'Miktar';
                document.getElementById('buyPriceLabel').textContent = 'Alış Kuru (₺)';
                document.getElementById('buyPriceGroup').style.display = 'block';
            } else {
                document.getElementById('amountLabel').textContent = 'Adet';
                const currency = (selectedType === 'us' || selectedType === 'etf') ? '$' : '₺';
                document.getElementById('buyPriceLabel').textContent = `Alış Fiyatı (${currency})`;
                document.getElementById('buyPriceGroup').style.display = 'block';
            }
        }

        // ========== SEARCH ==========
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const query = e.target.value.toLowerCase().trim();
            const results = document.getElementById('searchResults');

            if (query.length < 1) {
                results.classList.remove('active');
                return;
            }

            const assets = ASSETS_DATA[selectedType] || [];
            const filtered = assets.filter(a =>
                a.symbol.toLowerCase().includes(query) ||
                a.name.toLowerCase().includes(query)
            ).slice(0, 8);

            if (filtered.length === 0) {
                results.innerHTML = '<div class="search-item"><div class="search-item-info"><div class="search-item-symbol">Sonuç bulunamadı</div></div></div>';
            } else {
                results.innerHTML = filtered.map(asset => `
                    <div class="search-item" onclick="selectAsset('${asset.symbol}')">
                        <div class="search-item-icon asset-icon ${selectedType}">${asset.symbol.substring(0, 2)}</div>
                        <div class="search-item-info">
                            <div class="search-item-symbol">${asset.symbol}</div>
                            <div class="search-item-name">${asset.name}</div>
                        </div>
                    </div>
                `).join('');
            }

            results.classList.add('active');
        });

        document.getElementById('searchInput').addEventListener('focus', function(e) {
            if (e.target.value.length >= 1) {
                document.getElementById('searchResults').classList.add('active');
            }
        });

        document.addEventListener('click', function(e) {
            if (!e.target.closest('.search-container')) {
                document.getElementById('searchResults').classList.remove('active');
            }
        });

        function selectAsset(symbol) {
            const assets = ASSETS_DATA[selectedType] || [];
            const asset = assets.find(a => a.symbol === symbol);

            if (asset) {
                selectedAsset = asset;
                document.getElementById('searchGroup').style.display = 'none';
                document.getElementById('selectedAssetGroup').style.display = 'block';
                document.getElementById('selectedIcon').className = `asset-icon ${selectedType}`;
                document.getElementById('selectedIcon').innerHTML = symbol.substring(0, 2);
                document.getElementById('selectedSymbol').textContent = symbol;
                document.getElementById('selectedName').textContent = asset.name;
                document.getElementById('searchResults').classList.remove('active');

                if (selectedType !== 'deposit' && selectedType !== 'cash') {
                    document.getElementById('buyPriceInput').value = asset.price.toFixed(2);
                }
            }
        }

        function clearSelection() {
            selectedAsset = null;
            document.getElementById('searchGroup').style.display = 'block';
            document.getElementById('selectedAssetGroup').style.display = 'none';
            document.getElementById('searchInput').value = '';
            document.getElementById('buyPriceInput').value = '';
        }

        // ========== SAVE ASSET ==========
        function saveAsset() {
            if (!selectedAsset && selectedType !== 'deposit' && selectedType !== 'cash') {
                showAlert('Lütfen bir varlık seçin!', 'error');
                return;
            }

            const amount = parseFloat(document.getElementById('amountInput').value);
            if (!amount || amount <= 0) {
                showAlert('Lütfen geçerli bir miktar girin!', 'error');
                return;
            }

            let buyPrice, currentPrice, interestRate;

            if (selectedType === 'deposit') {
                if (!selectedAsset) {
                    selectedAsset = ASSETS_DATA.deposit[0];
                }
                buyPrice = amount;
                currentPrice = parseFloat(document.getElementById('currentPriceInput').value) || amount;
                interestRate = parseFloat(document.getElementById('interestInput').value) || 0;
            } else {
                buyPrice = parseFloat(document.getElementById('buyPriceInput').value);
                if (!buyPrice || buyPrice <= 0) {
                    showAlert('Lütfen geçerli bir fiyat girin!', 'error');
                    return;
                }
                currentPrice = selectedAsset.price;
            }

            const assetData = {
                id: editingId || Date.now().toString(),
                type: selectedType,
                symbol: selectedAsset.symbol,
                name: selectedAsset.name,
                amount: amount,
                buyPrice: buyPrice,
                currentPrice: currentPrice,
                interestRate: interestRate || 0
            };

            if (editingId) {
                const index = portfolio.findIndex(a => a.id === editingId);
                if (index !== -1) {
                    portfolio[index] = assetData;
                }
            } else {
                portfolio.push(assetData);
            }

            savePortfolio();
            renderPortfolio();
            updateSummary();
            updateLastUpdateTime();
            closeAddModal();
            showAlert(editingId ? 'Varlık güncellendi!' : 'Varlık eklendi!', 'success');
        }

        // ========== EDIT ASSET ==========
        function editAsset(id) {
            const asset = portfolio.find(a => a.id === id);
            if (!asset) return;

            editingId = id;
            selectedType = asset.type;
            selectedAsset = { symbol: asset.symbol, name: asset.name, price: asset.currentPrice };

            document.getElementById('modalTitle').textContent = 'Varlığı Düzenle';
            document.getElementById('submitBtn').innerHTML = '<i class="fas fa-save"></i> Kaydet';
            document.getElementById('deleteBtn').style.display = 'block';

            document.querySelectorAll('.type-btn').forEach(btn => {
                btn.classList.toggle('active', btn.dataset.type === asset.type);
            });

            updateFormForType();

            document.getElementById('searchGroup').style.display = 'none';
            document.getElementById('selectedAssetGroup').style.display = 'block';
            document.getElementById('selectedIcon').className = `asset-icon ${asset.type}`;
            document.getElementById('selectedIcon').innerHTML = getAssetIconLetter(asset);
            document.getElementById('selectedSymbol').textContent = asset.symbol;
            document.getElementById('selectedName').textContent = asset.name;

            document.getElementById('amountInput').value = asset.amount;
            document.getElementById('buyPriceInput').value = asset.buyPrice;

            if (asset.type === 'deposit') {
                document.getElementById('currentPriceInput').value = asset.currentPrice;
                document.getElementById('interestInput').value = asset.interestRate || '';
            }

            document.getElementById('addModal').classList.add('active');
        }

        // ========== DELETE ASSET ==========
        function confirmDelete() {
            document.getElementById('confirmModal').classList.add('active');
        }

        function closeConfirmModal() {
            document.getElementById('confirmModal').classList.remove('active');
        }

        function deleteAsset() {
            if (editingId) {
                portfolio = portfolio.filter(a => a.id !== editingId);
                savePortfolio();
                renderPortfolio();
                updateSummary();
                updateLastUpdateTime();
            }
            closeConfirmModal();
            closeAddModal();
            showAlert('Varlık silindi!', 'success');
        }

        // ========== EXPORT ==========
        function exportData() {
            if (portfolio.length === 0) {
                showAlert('Dışa aktarılacak varlık yok!', 'error');
                return;
            }

            let csv = 'Tip,Sembol,İsim,Adet,Alış Fiyatı,Güncel Fiyat,Toplam Değer,Kar/Zarar,Kar/Zarar %\n';

            portfolio.forEach(asset => {
                const totalValue = calculateAssetValue(asset);
                const totalCost = asset.amount * asset.buyPrice;
                const profit = totalValue - totalCost;
                const profitPercent = totalCost > 0 ? (profit / totalCost) * 100 : 0;

                csv += `${asset.type},${asset.symbol},"${asset.name}",${asset.amount},${asset.buyPrice},${asset.currentPrice},${totalValue.toFixed(2)},${profit.toFixed(2)},${profitPercent.toFixed(2)}%\n`;
            });

            const blob = new Blob(['\ufeff' + csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `portfolio_${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
            URL.revokeObjectURL(url);
            showAlert('Portföy dışa aktarıldı!', 'success');
        }

        // ========== UTILITIES ==========
        function formatCurrency(value) {
            return new Intl.NumberFormat('tr-TR', {
                style: 'currency',
                currency: 'TRY',
                minimumFractionDigits: 2,
                maximumFractionDigits: 2
            }).format(value);
        }

        function formatNumber(value) {
            return new Intl.NumberFormat('tr-TR', {
                minimumFractionDigits: 0,
                maximumFractionDigits: 4
            }).format(value);
        }

        function showAlert(message, type) {
            const alertEl = document.getElementById('customAlert');
            const textEl = document.getElementById('alertText');
            const iconEl = alertEl.querySelector('i');

            textEl.textContent = message;
            alertEl.className = `custom-alert ${type} active`;
            iconEl.className = type === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-circle';

            setTimeout(() => {
                alertEl.classList.remove('active');
            }, 2500);
        }

        // Add spin animation for refresh
        const style = document.createElement('style');
        style.textContent = `
            @keyframes spin {
                from { transform: rotate(0deg); }
                to { transform: rotate(360deg); }
            }
        `;
        document.head.appendChild(style);

        // Initialize
        init();
    </script>
</body>
</html>
